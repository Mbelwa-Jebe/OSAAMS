<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="373dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="55dp"
                app:layout_constraintBottom_toTopOf="@id/ap_tittle"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="2dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/studentid_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ap_tittle"
                        android:layout_toLeftOf="@id/student_lname"
                        android:paddingRight="30dp"
                        android:text="Sudent_ID" />

                    <TextView
                        android:id="@+id/registration_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ap_tittle"
                        android:layout_centerHorizontal="true"
                        android:text="Enter Request Info"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/studentfnm_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/studentid_info"
                        android:layout_toLeftOf="@id/student_lname"
                        android:paddingRight="30dp"
                        android:text="First Name" />

                    <TextView
                        android:id="@+id/student_fname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/registration_no"
                        android:layout_centerHorizontal="true"
                        android:text="Enter Request Info"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/studentlname_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/studentfnm_info"
                        android:layout_toLeftOf="@id/student_lname"
                        android:paddingRight="30dp"
                        android:paddingTop="4dp"
                        android:text="Last Name" />

                    <TextView
                        android:id="@+id/student_lname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/student_fname"
                        android:layout_centerHorizontal="true"
                        android:text="Enter Request Info"
                        android:textSize="18sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/programme_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/studentlname_info"
                        android:layout_toLeftOf="@id/student_lname"
                        android:paddingRight="30dp"
                        android:paddingTop="4dp"
                        android:text="Programme"
                        tools:layout_editor_absoluteX="47dp"
                        tools:layout_editor_absoluteY="235dp" />

                    <TextView
                        android:id="@+id/programme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/student_lname"
                        android:layout_centerHorizontal="true"
                        android:text="Enter Request Info"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/ap_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tableLayout"
                android:layout_marginStart="132dp"
                android:layout_marginTop="-123dp"
                android:text="Student Information"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="@+id/tableLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.004" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>