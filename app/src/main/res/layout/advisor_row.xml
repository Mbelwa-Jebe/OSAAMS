<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popup_id"
    android:orientation="vertical"
    tools:ignore="MissingClass">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/ap_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advisor Information"
                    android:textSize="18sp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/studentid_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="30dp"
                    android:paddingTop="6dp"
                    android:text="First Name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/advisor_fname"
                    android:text="Enter Request Info"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/studentfnm_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/studentid_info"
                    android:layout_toLeftOf="@id/advisor_fname"
                    android:paddingRight="30dp"
                    android:text="Last Name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/advisor_lname"
                    android:text="Enter Request Info"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/studentlname_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/studentfnm_info"
                    android:layout_toLeftOf="@id/advisor_lname"
                    android:paddingRight="30dp"
                    android:paddingTop="4dp"
                    android:text="Contacts" />

                <TextView
                    android:id="@+id/advisor_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/advisor_lname"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dp"
                    android:text="Enter Request Info"
                    android:textSize="18sp" />
            </TableRow>


<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/programme_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingTop="4dp"
        android:text="Office" />

    <TextView
        android:id="@+id/advisor_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advisor_id"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:text="Enter Request Info"
        android:textSize="18sp" />
</TableRow>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>