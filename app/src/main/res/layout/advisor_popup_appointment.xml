<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_id"
    android:orientation="vertical"
    tools:ignore="MissingClass">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:padding="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ap_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Enter Request Info"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/student_id_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/requstinfo_id_ap"
                android:hint="Student ID" />

            <EditText
                android:id="@+id/requstinfo_id_ap"
                android:layout_below="@id/ap_tittle"
                android:layout_width="match_parent"
                android:hint="Request information"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ad_date_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ap_tittle"
                android:hint="Request Date" />

            <EditText
                android:id="@+id/ad_time_ap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ap_tittle"
                android:hint="Request Time" />

            <Button
                android:id="@+id/ad_submit_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/student_id_ap"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:background="@color/design_default_color_primary"
                android:text="SUBMIT"
                android:textAlignment="center" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>